<Window x:Class="ElectroStore.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать товар" Height="400" Width="400">
    <StackPanel Margin="10">
        <Label>Название товара:</Label>
        <TextBox x:Name="ProductNameTextBox"/>

        <Label>Категория:</Label>
        <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="CategoryName"/>

        <Label>Описание:</Label>
        <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap"/>

        <Label>Цена:</Label>
        <TextBox x:Name="PriceTextBox"/>

        <Label>Количество:</Label>
        <TextBox x:Name="QuantityTextBox"/>

        <Label>URL изображения:</Label>
        <TextBox x:Name="ImageURLTextBox"/>

        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        <Button Content="Отмена" Click="CancelButton_Click" Margin="0,5,0,0"/>
    </StackPanel>
</Window>